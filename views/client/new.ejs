<div class="frame-border">
  <% flash.get('error').forEach(function (message) { %>
    <div class="alert">
      <%= message %>
      <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    </div>
  <% }) %>
  <br>
  <h3>Create Client</h3>
  <div class="wrapper">
    <form method="POST" action="/admin/clients/create">
      <div>
        <label>Client Name:</label>
        <br>
        <input type="text" name="clientName" style="width:33%;padding: 6px 12px; margin: 8px 0;box-sizing: border-box;"></input>
      </div>
      <div>
        <label>Redirect URI:</label>
        <br>
        <input type="text" name="redirectURI" style="width:33%;padding: 6px 12px; margin: 8px 0;box-sizing: border-box;"></input>
      </div>
      <br>
      <div class="buttons">
        <button class="button button-apps">Save</button>
        <a href="/">Cancel</a>
      </div>
    </form>
  </div>
</div>
